<Window x:Class="VuePrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TracabiliteV2"
        mc:Ignorable="d"
        Title="VuePrincipal" Height="480" Width="590"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Label x:Name="LbTitreNumEtiq" Grid.Row="0" Content="Saisir le numéro d'étiquette :" FontSize="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TbNumEtiq" Grid.Row="1" Margin="20" FontSize="36"/>
        <Button x:Name="BtnRech" Content="Valider" FontSize="40" Grid.Row="2" Height="80" Width="250" VerticalAlignment="Top" Click="BtnRech_Click"/>


    </Grid>
</Window>
