<Window x:Class="TestAffichage.View.PageParam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PageParam" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" FontSize="16" Content="Choisir un site de production" VerticalAlignment="Bottom" HorizontalContentAlignment="Center"/>
        <ComboBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Width="180"/>
        <Button Grid.Column="1" Grid.Row="3" Content="Valider"/>
        <Button Grid.Row="3" Content="Annuler"/>
        <Button Content="TestBDD" Click="ButtonBase_OnClick" HorizontalAlignment="Left" Margin="63,15,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75"/>






    </Grid>
</Window>
