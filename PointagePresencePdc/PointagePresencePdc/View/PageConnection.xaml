<Page x:Class="PointagePresencePdc.View.PageConnection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointagePresencePdc.View"
      xmlns:uc="clr-namespace:PointagePresencePdc.UserControl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageConnection">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label x:Name="lb_Pointage" Content="Saisir votre numéro de pointage" FontSize="32" FontWeight="ExtraBold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBox Grid.Row="1" x:Name="tb_Pointage" Width="200" FontSize="32" Margin="20"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Row="2" x:Name="btn_Conenction" Content="Se Connecter" FontSize="32" Click="Btn_Conenction_OnClick" HorizontalAlignment="Center" VerticalAlignment="Top"/>

    </Grid>
</Page>
